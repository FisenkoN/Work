@using School.WEB.Extensions
@model School.WEB.ViewModels.Account.RegisterModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    var operation = ViewBag.Result as OperationResult;
}

<partial name="_OperationMessage" for="@operation"/>

<h2>Registration</h2>
 
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Enter Email</label><br />
            <input type="email" required asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password">Enter password</label><br />
            <input asp-for="Password" required/>
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Repeat password</label><br />
            <input asp-for="ConfirmPassword" required/>
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-group">
            <label asp-for="Role" class="control-label"></label>
            <select asp-for="Role" class="form-control" asp-items="ViewBag.Roles">
                <option>-none-</option>
            </select>
        </div>
        <div>
            <input type="submit" value="Registration" />
        </div>
    </div>
</form>
