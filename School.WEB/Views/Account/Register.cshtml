@model School.WEB.ViewModels.Account.RegisterModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<partial name="_OperationMessage" for="@Model.OperationResult"/>

<h2>Registration</h2>
 
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Enter Email</label><br />
            <input type="text" required asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password">Enter password</label><br />
            <input asp-for="Password" required/>
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Repeat password</label><br />
            <input asp-for="ConfirmPassword" required/>
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Registration" />
        </div>
    </div>
</form>
