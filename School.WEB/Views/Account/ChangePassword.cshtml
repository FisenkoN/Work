@model School.WEB.ViewModels.Account.ChangePasswordModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<partial name="_OperationMessage" for="@Model.OperationResult"/>
 
<form asp-action="ChangePassword" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <input type="hidden" asp-for="Email"/>
        <div class="form-group">
            <label asp-for="OldPassword">Enter old password</label>
            <input asp-for="OldPassword"/>
            <span asp-validation-for="OldPassword"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewPassword">Enter new password</label>
            <input asp-for="NewPassword"/>
            <span asp-validation-for="NewPassword"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewPasswordAgain">Enter new password again</label>
            <input asp-for="NewPasswordAgain"/>
            <span asp-validation-for="NewPasswordAgain"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Change" class="btn btn-outline-dark" />
        </div>
    </div>
</form>

