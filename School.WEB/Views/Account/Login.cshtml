@model School.WEB.ViewModels.Account.LoginModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<partial name="_OperationMessage" for="@Model.OperationResult"/>

<h2>Enter to site</h2>
 
<a asp-action="Register" asp-controller="Account" class="btn-secondary">
    Registration
</a>
 
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Enter Email</label>
            <input type="email" required asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter password</label>
            <input asp-for="Password" required/>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
<a asp-action="ForgotPassword" asp-controller="Account" class="btn btn-primary">
    Forgot password
</a>
