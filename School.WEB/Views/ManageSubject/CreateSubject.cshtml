@model School.WEB.ViewModels.ManageSubject.EditCreateSubject.CreateSubjectViewModel
@using School.WEB.Controllers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_OperationMessage" for="@Model.OperationResult"/>

<h1>Create</h1>
<h4>Subject</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="@nameof(ManageSubjectController.CreateSubject)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" required class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentIds" class="control-label"></label>
                <select asp-for="StudentIds" class="form-control" asp-items="ViewBag.Students"></select>
            </div>
            <div class="form-group">
                <label asp-for="TeacherIds" class="control-label"></label>
                <select asp-for="TeacherIds" class="form-control" asp-items="ViewBag.Teachers"></select>
            </div>
            <div>
                <a asp-action="@nameof(ManageSubjectController.GetSubjects)">
                    Back to List
                </a>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>