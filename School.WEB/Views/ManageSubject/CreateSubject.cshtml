@using School.WEB.Controllers
@model School.WEB.ViewModels.ManageSubject.EditCreateSubject.CreateSubjectViewModel
@using School.WEB.Extensions

@{ var operation = (OperationResult<string>)ViewBag.Result;}

@if (operation != null)
{
    var statusMessageClass = operation.Success ? "success" : "danger";
    
    <div class="alert alert-@statusMessageClass js-alert-operation-result" role="alert">
        @operation.Result
    </div>
    
    if (operation.Success)
    {
        <script type="text/javascript">
            setTimeout(function () {
                document.getElementsByClassName('js-alert-operation-result')[0].remove()
            }, 8000);
        </script>
    }
}

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
<h4>Subject</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="@nameof(ManageSubjectController.CreateSubject)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentIds" class="control-label"></label>
                <select asp-for="StudentIds" class="form-control" asp-items="ViewBag.Students"></select>
            </div>
            <div class="form-group">
                <label asp-for="TeacherIds" class="control-label"></label>
                <select asp-for="TeacherIds" class="form-control" asp-items="ViewBag.Teachers"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="@nameof(ManageSubjectController.GetSubjects)">
        Back to List
    </a>
</div>