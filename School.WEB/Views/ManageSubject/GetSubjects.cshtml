@using School.WEB.Controllers
@model School.WEB.ViewModels.ManageSubject.GetSubjects.GetSubjectsViewModel
@using School.WEB.Extensions

@{ var operation = ViewData["Result"] as OperationResult<string>;}

@if (operation != null)
{
    var statusMessageClass = operation.Success ? "success" : "danger";
    
    <div class="alert alert-@statusMessageClass js-alert-operation-result" role="alert">
        @operation.Result
    </div>
    
    if (operation.Success)
    {
        <script type="text/javascript">
            setTimeout(function () {
                document.getElementsByClassName('js-alert-operation-result')[0].remove()
            }, 8000);
        </script>
    }
}

@{
    ViewData["Title"] = "GetSubjects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<td>
    <a asp-action="@nameof(ManageSubjectController.CreateSubject)">
        Create
    </a>
</td>

<h1>Subjects list</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Subjects)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="@nameof(ManageSubjectController.EditSubject)" asp-route-id="@item.Id">
                    Edit
                </a>
                <a asp-action="@nameof(ManageSubjectController.DeleteSubject)" asp-route-id="@item.Id">
                    Delete
                </a>
                <a asp-action="@nameof(ManageSubjectController.DetailsSubject)" asp-route-id="@item.Id">
                    Details
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
<div>
    <a asp-action="@nameof(AdminController.Index)" asp-controller="Admin">
        Back to Admin form
    </a>
</div>