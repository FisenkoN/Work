@model School.WEB.ViewModels.ManageSubject.DetailsSubject.DetailsSubjectViewModel
@using School.WEB.Controllers

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>Details</h1>

<div>
    <h4>Subjects</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <p>Teachers</p>
        </dt>
        <dd class="col-sm-10">
            @if (Model.Teachers.Any())
            {
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">
                            Teachers who teach in the classroom
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var teacher in Model.Teachers)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(@teacher.FullName,"DetailsTeacher","ManageTeacher",new {id = teacher.Id})
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
            else
            {
                <p>No teachers</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="@nameof(ManageSubjectController.EditSubject)" asp-route-id="@Model.Id" class="btn btn-primary">
        Edit
    </a>
    <a asp-action="@nameof(ManageSubjectController.DeleteSubject)" asp-route-id="@Model.Id" class="btn btn-danger">
        Delete
    </a>
    <a asp-action="@nameof(ManageSubjectController.GetSubjects)" class="btn btn-secondary">
        Back to List
    </a>
</div>