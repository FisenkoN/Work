@model School.WEB.ViewModels.ManageSubject.EditCreateSubject.EditSubjectViewModel
@using School.WEB.Controllers

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_OperationMessage" for="@Model.OperationResult"/>

<h1>Edit</h1>

<h4>Subject</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="@nameof(ManageSubjectController.EditSubject)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" required class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <a asp-action="@nameof(ManageSubjectController.GetSubjects)">
                    Back to List
                </a>
            </div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>