@using School.WEB.Controllers
@model School.WEB.ViewModels.Visitor.TeacherDetails.TeacherDetailsViewModel


@{
    ViewData["Title"] = "TeacherDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<img height="250" src="@Model.Image" alt="avatar"/>

<div>
    <h4>Class</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            First name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Last name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            Gender
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            <p>Class</p>
        </dt>
        <dd class="col-sm-10">
            @if (Model.ClassName != "no class")
            {
                @Html.DisplayFor(model => model.ClassName)
            }
            else
            {
                <p>no class</p>
            }
        </dd>
        <dt class="col-sm-2">
            <p>Subjects</p>
        </dt>
        <dd class="col-sm-10">
            @Html.ListBox("subjects", new SelectList(Model.SubjectNames))
        </dd>
    </dl>
</div>
<div>
    <a asp-action="@nameof(VisitorController.GetTeachers)">
        Back to List
    </a>
    <a asp-action="@nameof(VisitorController.Index)">
        Back to categories
    </a>
</div>