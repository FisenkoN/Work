@model School.WEB.ViewModels.Visitor.TeacherDetails.TeacherDetailsViewModel
@using School.WEB.Controllers

@{
    ViewData["Title"] = "TeacherDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<img height="250" src="@Model.Image" alt="avatar"/>

<div>
    <h4>Class</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            First name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Last name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            Gender
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            Active 
        </dt>
        <dd class="col-sm-10">
            <input type="checkbox" onclick="return false;" checked = "@Model.Active">
        </dd>
        <dt class="col-sm-2">
            <p>My class</p>
        </dt>
        <dd class="col-sm-10">
            @if (Model.Class != null)
            {
                @Html.ActionLink(Model.Class.Name,"ClassDetails","Visitor",new {id = Model.Class.Id})
            }
            else
            {
                <p>no class</p>
            }
        </dd>
        <dt class="col-sm-2">
            <p>Subject</p>
        </dt>
        <dd class="col-sm-10">
            @if (Model.Subject != null)
            {
                @Html.ActionLink(Model.Subject.Name,"SubjectDetails","Visitor", new {id = Model.Subject.Id})
            }
            else
            {
                <p>no subject</p>
            }
        </dd>
        
        <dt class="col-sm-2">
            <p>Classes</p>
        </dt>
        <dd class="col-sm-10">
            @if (Model.Classes.Any())
            {
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">
                            Classes where he teach
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var form in Model.Classes)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(form.Name,"ClassDetails","Visitor",new {id = form.Id})
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
            else
            {
                <p>No classes</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="@nameof(VisitorController.GetTeachers)" class="btn btn-secondary">
        Back to List
    </a>
    <a asp-action="@nameof(VisitorController.Index)" class="btn btn-warning">
        Back to categories
    </a>
</div>