@model School.WEB.ViewModels.Visitor.GetSubjects.GetSubjectsViewModel
@using School.WEB.Controllers

@{
    ViewData["Title"] = "GetSubjects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>
<body>
<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Visitor <b>Subjects</b></h2>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach(var item in Model.Subjects)
            {<tr>
                 <td>
                     <a asp-action="@nameof(VisitorController.SubjectDetails)" asp-route-id="@item.Id">
                         @item.Name
                     </a>
                 </td>
                 <td>
                     <a asp-action="@nameof(VisitorController.SubjectDetails)" asp-route-id="@item.Id" class="details">
                         <i class="material-icons" data-toggle="tooltip" title="Details">&#xe417;</i>
                     </a>
                 </td>
             </tr>}
            </tbody>
        </table>
    </div>
</div>
</body>
<div>
    <a asp-action="@nameof(VisitorController.Index)" class="btn btn-warning">
        Back to categories
    </a>
</div>