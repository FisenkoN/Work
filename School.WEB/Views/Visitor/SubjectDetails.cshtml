@model School.WEB.ViewModels.Visitor.SubjectDetails.SubjectDetailsModelView
@using School.WEB.Controllers

@{
    ViewData["Title"] = "SubjectDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Class</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <p>Teachers</p>
        </dt>
        <dd class="col-sm-10">
            @if (Model.Teachers.Any())
            {
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">
                            Teachers who teach in the classroom
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var teacher in Model.Teachers)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(teacher.FullName,"TeacherDetails","Visitor",new {id = teacher.Id})
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
            else
            {
                <p>No teachers</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="@nameof(VisitorController.GetSubjects)" class="btn btn-secondary">
        Back to List
    </a>
    <a asp-action="@nameof(VisitorController.Index)" class="btn btn-warning">
        Back to categories
    </a>
</div>