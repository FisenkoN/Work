@using School.WEB.Controllers
@model School.WEB.ViewModels.Admin.DetailsTeacher.DetailsTeacherViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>Details</h1>

<img height="250" src="@Model.Image" alt="avatar"/>

<div>
    <h4>Teacher</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            FirstName
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            LastName
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            Gender
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            <p>Class</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClassName)
        </dd>
        <dt class="col-sm-2">
            <p>Subjects</p>
        </dt>
        <dd class="col-sm-10">
            @Html.ListBox("subjects", new SelectList(Model.SubjectNames))
        </dd>
    </dl>
</div>
<div>
    <a asp-action="@nameof(AdminController.EditTeacher)" asp-route-id="@Model.Id">Edit</a>
    <a asp-action="@nameof(AdminController.DeleteTeacher)" asp-route-id="@Model.Id">Delete</a>
    <a asp-action="@nameof(AdminController.GetTeachers)">Back to List</a>
</div>