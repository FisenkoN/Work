@using School.WEB.Controllers
@model School.WEB.ViewModels.Admin.GetTeachers.GetTeachersViewModel

@{
    ViewData["Title"] = "GetTeachers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<td>
    <a asp-action="@nameof(AdminController.CreateTeacher)">Create</a>
</td>

<h1>Teachers list</h1>

<table class="table">
    <thead>
    <tr>
        <th></th>
        <th>
            FirstName
        </th>
        <th>
            LastName
        </th>
        <th>
            Age
        </th>
        <th>
            Gender
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Teachers)
    {
        <tr>
            <td>
                <img height="50" src="@item?.Image" alt="avatar"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                <a asp-action="@nameof(AdminController.EditTeacher)" asp-route-id="@item.Id">Edit</a>
                <a asp-action="@nameof(AdminController.DeleteTeacher)" asp-route-id="@item.Id">Delete</a>
                <a asp-action="@nameof(AdminController.DetailsTeacher)" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<div>
    <a asp-action="@nameof(AdminController.Index)">Back to Admin form</a>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <script type="text/javascript">
        alert("@ViewBag.Message");
    </script>
}