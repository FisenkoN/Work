@model System.Collections.Generic.List<School.BLL.Dto.BlogDto>

@{
    ViewData["Title"] = "GetBlogs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<td>
    <a asp-action="CreateBlog">Create</a>
</td>

<h1>Blogs list</h1>

<table class="table">
    <thead>
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Category)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img height="50" src="@item.Image" alt="avatar"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                <a asp-action="EditBlog" asp-route-id="@item.Id">Edit</a>
            </td>
            <td>
                <a asp-action="DeleteBlog" asp-route-id="@item.Id">Delete</a>
            </td>
            <td>
                <a asp-action="DetailsBlog" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to Admin form</a>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <script type="text/javascript">
        alert("@ViewBag.Message");
    </script>
}
