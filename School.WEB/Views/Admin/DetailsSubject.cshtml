@model School.WEB.ViewModels.Admin.DetailsSubject.DetailsSubjectViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>Details</h1>

<div>
    <h4>Subjects</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <p>Students</p>
        </dt>
        <dd class="col-sm-10">
            @Html.ListBox("students", new SelectList(Model.StudentNames))
        </dd>
        <dt class="col-sm-2">
            <p>Teachers</p>
        </dt>
        <dd class="col-sm-10">
            @Html.ListBox("teachers", new SelectList(Model.TeacherNames))
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditSubject" asp-route-id="@Model.Id">Edit</a>
    <a asp-action="DeleteSubject" asp-route-id="@Model.Id">Delete</a>
    <a asp-action="GetSubjects">Back to List</a>
</div>