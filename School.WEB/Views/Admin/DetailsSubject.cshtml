@model (School.BLL.Dto.SubjectDto subject, IEnumerable<string> students, IEnumerable<string> teachers)

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>Details</h1>

<div>
    <h4>Subjects</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item1.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item1.Name)
        </dd>
        <dt class="col-sm-2">
            <p>Students</p>
        </dt>
        <dd class="col-sm-10">
            @Html.ListBox("students", new SelectList(Model.Item2))
        </dd>
        <dt class="col-sm-2">
            <p>Teachers</p>
        </dt>
        <dd class="col-sm-10">
            @Html.ListBox("teachers", new SelectList(Model.Item3))
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditSubject" asp-route-id="@Model.Item1.Id">Edit</a>
    <a asp-action="DeleteSubject" asp-route-id="@Model.Item1.Id">Delete</a>
    <a asp-action="GetSubjects">Back to List</a>
</div>