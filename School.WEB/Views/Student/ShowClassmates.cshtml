@model School.WEB.ViewModels.Student.ShowClassmates.ShowClassmatesViewModel
@using School.WEB.Controllers

@{
    ViewData["Title"] = "ShowClassmates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

<h1>Classmates</h1>

@{
    if (Model != null)
    {
        <table class="table">
            <thead>
            <tr>
                <th></th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Age
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Active
                </th>
                <th>
                    Action
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Students)
            {
                <tr>
                    <td>
                        <a asp-action="@nameof(StudentController.StudentDetails)" asp-route-id="@item.Id" class="details">
                            <img height="50" src="@item.Image" alt="avatar"/>
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        <input type="checkbox" onclick="return false;" checked = "@item.Active">
                    </td>
                    <td>
                        <a asp-action="@nameof(StudentController.StudentDetails)" asp-route-id="@item.Id" class="details">
                            <i class="material-icons" data-toggle="tooltip" title="Details">&#xe417;</i>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>This student doesn't have classmates</p>
    }
}
<div>
    <a asp-action="@nameof(StudentController.Index)" class="btn btn-warning">
        Back to categories
    </a>
</div>