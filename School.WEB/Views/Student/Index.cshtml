@model IEnumerable<School.BLL.Dto.StudentDto>

@{
    ViewData["Title"] = "Classes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>It's all student. Please edit only your data</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                <a asp-action="StudentDetails" asp-route-id="@item.Id">Details</a>
            </td>
            <td>
                <a asp-action="ShowClassmates" asp-route-id="@item.Id">Show classmates</a>
            </td>
            <td>
                <a asp-action="ShowClassTeacher" asp-route-id="@item.Id">Show class teacher</a>
            </td>
        </tr>
}
    </tbody>
</table>