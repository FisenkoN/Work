@using School.WEB.Controllers
@model School.WEB.ViewModels.Student.StudentDetails.StudentDetailsViewModel


@{
    ViewData["Title"] = "StudentDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<img height="250" src="@Model.Student.Image" alt="avatar"/>

<div>
    <h4>Student</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            FirstName
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstName)
        </dd>
        <dt class="col-sm-2">
            LastName
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.LastName)
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Age)
        </dd>
        <dt class="col-sm-2">
            Gender
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Gender)
        </dd>
        <dt class="col-sm-2">
            <p>Class</p>
        </dt>
        <dd class="col-sm-10">
            @if (Model.Class != null)
            {
                @Html.DisplayFor(model => model.Class.Name)
            }
            else
            {
                <p>no class</p>
            }
        </dd>
        <dt class="col-sm-2">
            <p>Subjects</p>
        </dt>
        <dd class="col-sm-10">
            @Html.ListBox("subjects", new SelectList(Model.Student.Subjects.Select(s=>s.Name)))
        </dd>
    </dl>
</div>
<div>
    <a asp-action="@nameof(StudentController.Edit)" asp-route-id="@Model.Student.Id">
        Edit
    </a>
    <a asp-action="@nameof(StudentController.Index)">
        Back to List
    </a>
</div>