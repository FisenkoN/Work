@model Tuple<School.BLL.Dto.StudentDto, string, IEnumerable<string>>


@{
    ViewData["Title"] = "StudentDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<img height="250" src="@Model.Item1?.Image" alt="avatar"/>

<div>
    <h4>Student</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item1.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item1.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item1.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item1.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item1.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item1.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item1.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item1.Gender)
        </dd>
        <dt class="col-sm-2">
            <p>Class</p>
        </dt>
        <dd class="col-sm-10">
            @if (Model.Item2 != null)
            {
                @Html.DisplayFor(model => model.Item2)
            }
            else
            {
                <p>no class</p>
            }
        </dd>
        <dt class="col-sm-2">
            <p>Subjects</p>
        </dt>
        <dd class="col-sm-10">
            @Html.ListBox("subjects", new SelectList(Model.Item3))
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Item1.Id">Edit</a>
    <a asp-action="Index">Back to List</a>
</div>