@model Contact
<style>
body {
  background-color: #3040c4;
}
.container {
  font-family: "Arial",serif;
  max-width: 320px;
  margin: 0 auto;
  padding: 16px;
  background-color: #ffffff;
}
input {
  width: 94%;
  padding: 8px;
  margin: 8px 0;
  border: 1px solid #dddddd;
}
textarea {
  width: 94%;
  padding: 8px;
  margin: 8px 0;
  border: 1px solid #dddddd;
}
input[type="submit"] {
  width: 100%;
  background-color: #3040c4;
  color: white;
  padding: 12px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}
</style>
<hr/>
<div class="container">
    <form asp-action="ContactUs">
        <h1>Contact Us School</h1>
        <p>Please fill this form with a message. We will get back in 24 hours.</p>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" placeholder="Name" required autofocus class="form-control"/>
        </div>
        <div class="form-group">
            <input asp-for="Email" type="email" placeholder="Email" required  class="form-control"/>
        </div>
        <div class="form-group">
            <input asp-for="PhoneNumber" pattern="[0-9]{3}[0-9]{2}[0-9]{3}[0-9]{4}" type="tel" placeholder="Phone number"  required class="form-control"/>
        </div>
        <div class="form-group">
            <input asp-for="Message" type="text" placeholder="Message" required  class="form-control"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary"/>
        </div>
    </form>
</div>