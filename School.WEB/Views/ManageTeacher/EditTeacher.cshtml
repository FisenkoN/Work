@model School.WEB.ViewModels.ManageTeacher.EditCreateTeacher.EditCreateTeacherViewModel
@using School.WEB.Controllers

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_OperationMessage" for="@Model.OperationResult"/>

<h1>Edit</h1>

<h4>Teacher</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="@nameof(ManageTeacherController.EditTeacher)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" minlength="2" maxlength="20" required class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" minlength="2" maxlength="20" required class="form-control"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" required value="@Model.Age" min="18" max="80" class="form-control"/>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" required class="form-control" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            @if ((ViewBag.ClassesWithoutClassTeacher as SelectList)!.Any())
            {
                <div class="form-group">
                    <label asp-for="ClassId" class="control-label"></label>
                    <select asp-for="ClassId" class="form-control" asp-items="ViewBag.ClassesWithoutClassTeacher"></select>
                    <span asp-validation-for="ClassId" class="text-danger"></span>
                </div>
            }
            @if ((ViewBag.Subjects as SelectList)!.Any())
            {
                <div class="form-group">
                    <label asp-for="SubjectId" class="control-label"></label>
                    <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects"></select>
                    <span asp-validation-for="SubjectId" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="ClassIds" class="control-label"></label>
                <select asp-for="ClassIds" class="form-control" multiple="multiple" asp-items="ViewBag.Classes"></select>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control"/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Active" class="control-label"></label>
                <input asp-for="Active" minlength="2" maxlength="20" class="form-control"/>
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
            <div>
                <a asp-action="@nameof(ManageTeacherController.GetTeachers)"  class="btn btn-secondary">
                    Back to List
                </a>
            </div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>